#!/usr/bin/env ruby
require '%{gem_name}'
require '%{gem_name}/version'

runner = MisterBin::Runner.new '%{gem_name}', basedir: __dir__,
  header: "%{gem_name_camel} #{%{gem_name_camel}::VERSION}"

begin
  exit runner.run ARGV
rescue => e
  puts e.backtrace.reverse if ENV['DEBUG']
  say! "!txtred!#{e.class}: #{e.message}"
  exit 1
end